{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "paths": {
    "@telemetry": ["src/layers/telemetry/index.ts"]
  },
  "include": [
    "./layers/telemetry/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

